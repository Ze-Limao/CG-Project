<world> 
    <window width="512" height="512" />
    <camera> 
	    <position x="10" y="20" z="8" />
	    <lookAt x="0" y="0" z="0" />
	    <up x="0" y="1" z="0" /> 
        <projection fov="60" near="1" far="1000" />
    </camera>
	<lights>
		<light type="point" posx="0" posy="0.2" posz="0" />
		<light type="directional" dirx="1" diry="0.7" dirz="0.5"/>
		<light type="spot" posx="0" posy="2" posz="4" dirx="0" diry="-2" dirz="-4" cutoff="10"/>
	</lights>
    <group> 
		<transform>
			<rotate time="3" x="0" y="1" z="0" />
		</transform>
		<group>
			<transform>
				<translate time = "10" align="true"> <!-- O campo align diz se o objecto deve ser orientado na curva -->
					<point x = "0" y = "0" z = "4" />
					<point x = "4" y = "0" z = "0" />
					<point x = "0" y = "0" z = "-4" />
					<point x = "-4" y = "10" z = "0" />
				</translate>
				<rotate angle="-90" x="1" y="0" z="0" />
				<scale x="0.5" y="0.5" z="0.5" />
			</transform>
			<models> 
				<!-- <model file="bezier_10.3d" /> generator patch teapot.patch 10 bezier_10.3d -->
				<model file="box_2_3.3d" > <!-- generator box 2 3 box_2_3.3d -->
					<color>
						<diffuse R="200" G="200" B="000" />
						<ambient R="50" G="50" B="00" />
						<specular R="0" G="0" B="0" />
						<emissive R="0" G="0" B="0" />
						<shininess value="0" />
					</color>
				</model>
			</models>
		</group>
 	</group>
</world>
